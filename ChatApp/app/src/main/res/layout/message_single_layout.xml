<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_circle_imageview"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/default_image"/>

    <TextView
        android:id="@+id/message_display_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        android:text="Display Name"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/message_time_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/message_display_name_txt"
        android:layout_alignBottom="@+id/message_display_name_txt"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/message_display_name_txt"
        android:text="00:00" />
    <TextView
        android:id="@+id/message_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        android:text="asdada dada"
        android:padding="10dp"
        android:layout_below="@+id/message_display_name_txt"
        android:background="@drawable/message_text_background"/>
    <ImageView
        android:id="@+id/message_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_below="@+id/displayName"
        android:visibility="gone"/>
</RelativeLayout>