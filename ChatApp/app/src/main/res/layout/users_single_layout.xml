<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/single_user_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/default_image"/>

    <TextView
        android:id="@+id/single_usre_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/single_user_image"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/single_user_image"
        android:text="Display Name"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/single_user_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Single user Status"
        android:textSize="14sp"
        android:layout_below="@+id/single_usre_name"
        android:layout_alignStart="@+id/single_usre_name" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/single_user_online_icon"
        android:layout_width="25px"
        android:layout_height="25px"
        android:layout_alignTop="@+id/single_usre_name"
        android:layout_toEndOf="@+id/single_user_status"
        android:src="@color/colorGreen"
        android:visibility="invisible" />
    <ImageView
        android:id="@+id/chat_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_below="@+id/single_usre_name"
        android:layout_alignStart="@+id/single_usre_name"

        />
</RelativeLayout>